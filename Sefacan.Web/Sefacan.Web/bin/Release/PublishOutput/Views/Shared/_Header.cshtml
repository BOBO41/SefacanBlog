@model IEnumerable<CategoryModel>
<header class="header push-down-45">
    <div class="container">
        <div class="logo pull-left">
            <a href="/">
                <span>@Setting("general.editor.name").Value</span>
                <em>@Setting("general.slogan").Value</em>
            </a>
        </div>
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#readable-navbar-collapse">
                <span class="sr-only">Menu</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <nav class="navbar navbar-default pull-right" role="navigation">
            <div class="collapse navbar-collapse" id="readable-navbar-collapse">
                <ul class="navigation">
                    <li>
                        <a href="/">Anasayfa</a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Konular</a>
                        <ul class="navigation__dropdown">
                            @foreach (var item in Model)
                            {
                                <li>
                                    @if (Setting("category.postcount.enabled").BoolValue)
                                    {
                                        <a href="/@item.Url">@string.Format("{0}({1})", item.Name, item.PostCount)</a>
                                    }
                                    else
                                    {
                                        <a href="/@item.Url">@item.Name</a>
                                    }
                                </li>
                            }
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.RouteUrl("About")">Hakkımda</a>
                    </li>
                    <li>
                        <a href="@Url.RouteUrl("Project")">Projelerim</a>
                    </li>
                    <li>
                        <a href="@Url.RouteUrl("Contact")">İletişim</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</header>