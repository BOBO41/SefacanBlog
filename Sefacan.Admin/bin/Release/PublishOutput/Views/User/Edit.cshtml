@{
    ViewBag.Title = "Düzenle - " + Model.UserName;
}
@model UserModel
<div class="col-md-10">
    <div class="row">
        <div class="col-md-6">
            <div class="content-box-large">
                <div class="panel-body">
                    @Html.Action("Users", "User")
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="content-box-large">
                <div class="panel-body">
                    @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(x => x.Id)
                        <div class="form-group">
                            @Html.LabelFor(x => x.UserName, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                                <span class="text-danger">@Html.ValidationMessageFor(x => x.UserName)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Password, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" })
                                <span class="text-danger">@Html.ValidationMessageFor(x => x.Password)</span>
                            </div>
                        </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>