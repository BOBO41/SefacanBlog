@model IEnumerable<UserModel>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Düzenle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>@item.UserName</td>
                <td>
                    <a href="@Url.Action("Edit", "User", new { Id = item.Id })" cla class="btn btn-primary">
                        <i class="glyphicon glyphicon-pencil"></i>
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Delete", "User", new { Id = item.Id })" class="btn btn-danger btn-delete">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>