<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    @Html.Style("~/Content/css/bootstrap.min.css")
    @Html.Style("~/Content/css/switchery.min.css")
    @Html.Style("~/Content/css/styles.css")
    @Html.Script("~/Content/js/jquery.min.js")
    @Html.Script("~/Content/js/bootstrap.min.js")
    @Html.Script("~/Content/js/jquery.unobtrusive-ajax.min.js")
    @Html.Script("~/Content/js/jquery.validate.min.js")
    @Html.Script("~/Content/js/jquery.validate.unobtrusive.min.js")
    @Html.Script("~/Content/js/switchery.min.js")
    @Html.Script("~/Content/js/custom.js")
</head>
<body>
    <div class="header">
        <div class="col-md-2">
            <!-- Logo -->
            <div class="logo text-center">
                <h1><a href="/">Sefacan</a></h1>
            </div>
        </div>
        <div class="col-md-10">
            <div class="navbar navbar-inverse" role="banner">
                <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hesap <b class="caret"></b></a>
                            <ul class="dropdown-menu animated fadeInUp">
                                <li><a href="@Url.Action("Index","User")">Kullanıcılar</a></li>
                                <li><a href="@Url.Action("Logout","Home")">Çıkış Yap</a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <div class="page-content">
        <div class="row">
            <div class="col-md-2">
                <div class="sidebar content-box" style="display: block;">
                    <ul class="nav">
                        <!-- Main menu -->
                        <li class="current"><a href="/"><i class="glyphicon glyphicon-home"></i> Anasayfa</a></li>
                        <li><a href="@Url.Action("Index","Post")"><i class="glyphicon glyphicon-pencil"></i> Yazılar</a></li>
                        <li><a href="@Url.Action("Index","Category")"><i class="glyphicon glyphicon-list"></i> Kategoriler</a></li>
                        <li><a href="@Url.Action("Index","User")"><i class="glyphicon glyphicon-user"></i> Kullanıcılar</a></li>
                        <li><a href="@Url.Action("Index","Setting")"><i class="glyphicon glyphicon-wrench"></i> Ayarlar</a></li>
                        <li><a href="@Url.Action("ClearCache","Home")"><i class="glyphicon glyphicon-wrench"></i> Önbelleği Temizle</a></li>
                        <li><a href="@Url.Action("Logout","Home")"><i class="glyphicon glyphicon-log-out"></i> Çıkış Yap</a></li>
                    </ul>
                </div>
            </div>
            @RenderBody()
        </div>
    </div>
    <footer>
        <div class="container">
            <div class="copy text-center">
                Copyright @DateTime.Now.Year <a target="_blank" href="http://sefacan.net">Sefacan.net</a>
            </div>
        </div>
    </footer>
</body>
</html>