@{
    ViewBag.Title = "Düzenle - " + Model.Name;
}
@model CategoryModel
<div class="col-md-10">
    <div class="row">
        <div class="col-md-6">
            <div class="content-box-large">
                <div class="panel-body">
                    @Html.Action("Categories", "Category")
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="content-box-large">
                <div class="panel-body">
                    @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(x => x.Id)
                        <div class="form-group">
                            @Html.LabelFor(x => x.Url, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
                                <span class="text-danger">@Html.ValidationMessageFor(x => x.Url)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Name, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                <span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.IsActive, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.CheckBoxFor(x => x.IsActive)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>