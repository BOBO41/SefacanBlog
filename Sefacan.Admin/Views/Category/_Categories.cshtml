@model IEnumerable<CategoryModel>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Aktiflik</th>
            <th>Düzenle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>@item.Name</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="text-success">Aktif</span>
                    }
                    else
                    {
                        <span class="text-warning">Pasif</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Category", new { Id = item.Id })" class="btn btn-primary">
                        <i class="glyphicon glyphicon-pencil"></i>
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Delete", "Category", new { Id = item.Id })" class="btn btn-danger btn-delete">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>